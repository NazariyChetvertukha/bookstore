@model Store.Book

@{
    ViewData["Title"] = Model.Title;
}


<h1>@Model.Title</h1>
<p><strong>@Model.Author</strong></p>
<p>@Model.Description</p>
<p>Цена <strong>@Model.Price</strong></p>
<form action="@Url.Action("AddItem", "Order")" method="post">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <button class="btn btn-outline-success" type="submit" >AddItem to the cart</button>
</form>